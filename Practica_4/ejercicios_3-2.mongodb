// 1. En base al campo “source”, determinar la cantidad de usuarios que hay por cada canal.

db.tweets.mapReduce(function() { 
  emit(this.source, 1); 
}, function(key, values) { 
  return Array.sum(values)
  }, {out:"final"} )


